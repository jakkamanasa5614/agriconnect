rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”’ Allow users to read and write only their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ðŸŒ¾ Crop Marketplace rules
    match /crops/{cropId} {
      allow read: if true; // Publicly viewable
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.sellerId;
    }

    // ðŸ”„ Barter system rules
    match /barters/{barterId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.ownerId;
    }

    // ðŸŒ± Optional: Add more rules for AI reports, IoT logs, etc.
  }
}
